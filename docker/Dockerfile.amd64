FROM --platform=linux/amd64 debian:bookworm-slim
COPY ./_build/gateryx-client-amd64.deb /tmp/
COPY ./_build/gateryx-server-amd64.deb /tmp/
RUN apt-get update && apt-get install -y libssl3 openssl ca-certificates \
  /tmp/gateryx-client-amd64.deb /tmp/gateryx-server-amd64.deb && \
    rm -f /tmp/*.deb
ENTRYPOINT ["/usr/sbin/gateryx-server"]
